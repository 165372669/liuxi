<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_book_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.android.lucy.treasure.view.ChapterViewPager
        android:id="@+id/vp_book_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_chapter_titleBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/hailanse"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_chapter_back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/search_back_top_bar" />

        <TextView
            android:id="@+id/tv_chapter_bookName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="书名"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_book_huanyuan"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:text="换源"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>

</FrameLayout>