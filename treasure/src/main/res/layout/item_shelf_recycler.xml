<?xml version="1.0" encoding="utf-8"?>
<com.android.lucy.treasure.view.SwipeMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">





    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_book_shelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_item_shelf_selector"
        android:padding="20dp">

        <ImageView
            android:id="@+id/rl_book_img"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/rl_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心魔"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/rl_book_img"
            app:layout_constraintTop_toTopOf="@+id/rl_book_img" />

        <TextView
            android:id="@+id/rl_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="花香"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/rl_book_name"
            app:layout_constraintStart_toStartOf="@+id/rl_book_name"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

        <TextView
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:text="|"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toEndOf="@+id/rl_book_author"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

        <TextView
            android:id="@+id/rl_book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="修仙"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/rl_1"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

        <TextView
            android:id="@+id/rl_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:text="|"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toEndOf="@+id/rl_book_type"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

        <TextView
            android:id="@+id/rl_book_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="字数"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/rl_2"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

        <TextView
            android:id="@+id/rl_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="未读 :"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/rl_book_author"
            app:layout_constraintStart_toStartOf="@+id/rl_book_author"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_author" />

        <TextView
            android:id="@+id/rl_book_noChapterCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="13"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toEndOf="@+id/rl_3"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_author" />

        <TextView
            android:id="@+id/rl_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:text="章"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/rl_book_noChapterCount"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_author" />

        <TextView
            android:id="@+id/rl_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="更新 :"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/rl_3"
            app:layout_constraintStart_toStartOf="@+id/rl_3"
            app:layout_constraintTop_toBottomOf="@+id/rl_3" />

        <TextView
            android:id="@+id/rl_book_updateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="更新时间"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toEndOf="@+id/rl_3"
            app:layout_constraintTop_toBottomOf="@+id/rl_book_noChapterCount" />


    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tv_shelf_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/tv_bookshelf_delete_shape"
            android:padding="5dp"
            android:text="删除"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_shelf_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/tv_bookshelf_details_shape"
            android:padding="5dp"
            android:text="详情"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_shelf_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/tv_bookshelf_top_shape"
            android:padding="5dp"
            android:text="置顶"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>



</com.android.lucy.treasure.view.SwipeMenuView>