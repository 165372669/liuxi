<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/rl_book_img"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/rl_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="心魔"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/rl_book_img"
        app:layout_constraintTop_toTopOf="@+id/rl_book_img" />

    <TextView
        android:id="@+id/rl_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="花香"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/rl_book_name"
        app:layout_constraintStart_toStartOf="@+id/rl_book_name"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

    <TextView
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:text="|"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/rl_book_author"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

    <TextView
        android:id="@+id/rl_book_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="修仙"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toEndOf="@+id/rl_1"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

    <TextView
        android:id="@+id/rl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:text="|"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/rl_book_type"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

    <TextView
        android:id="@+id/rl_book_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="字数"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toEndOf="@+id/rl_2"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_name" />

    <TextView
        android:id="@+id/rl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="未读 :"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/rl_book_author"
        app:layout_constraintStart_toStartOf="@+id/rl_book_author"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_author" />

    <TextView
        android:id="@+id/rl_book_noChapterCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="13"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toEndOf="@+id/rl_3"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_author" />
    <TextView
        android:id="@+id/rl_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:text="章"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/rl_book_noChapterCount"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_author" />
    <TextView
        android:id="@+id/rl_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="更新 :"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/rl_3"
        app:layout_constraintStart_toStartOf="@+id/rl_3"
        app:layout_constraintTop_toBottomOf="@+id/rl_3" />

    <TextView
        android:id="@+id/rl_book_updateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="更新时间"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toEndOf="@+id/rl_3"
        app:layout_constraintTop_toBottomOf="@+id/rl_book_noChapterCount" />


</android.support.constraint.ConstraintLayout>