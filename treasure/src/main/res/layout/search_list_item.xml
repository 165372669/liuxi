<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_book"
        android:maxLines="1"
        android:padding="1dp"
        android:text="末日机甲"
        android:textColor="@color/hailanse"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_author_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_bookName"
        android:layout_below="@id/tv_bookName"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="作者："
            android:textColor="@color/zhonglanse"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="类型："
            android:textColor="@color/zhonglanse"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_bookName"
        android:layout_below="@id/ll_author_type"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:padding="1dp"
        android:text="内容："
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>