<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/details_top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/zhonghailanse"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_book_back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/search_back_top_bar" />

        <TextView
            android:id="@+id/et_seatch_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:text="书籍详情"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"

            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_detail"
        style="@style/customProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/details_top" />



    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_bOOk_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/details_top">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_book_cover"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_bookName_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="末日"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_cover"
            app:layout_constraintTop_toTopOf="@+id/iv_cover" />

        <TextView
            android:id="@+id/tv_author_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="末日刁民作"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_bookName_book"
            app:layout_constraintTop_toBottomOf="@+id/tv_bookName_book" />


        <TextView
            android:id="@+id/details_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/tv_author_book"
            app:layout_constraintTop_toTopOf="@+id/tv_author_book" />


        <TextView
            android:id="@+id/tv_type_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科幻"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/details_1"
            app:layout_constraintTop_toTopOf="@+id/tv_author_book" />

        <TextView
            android:id="@+id/details_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/tv_type_book"
            app:layout_constraintTop_toTopOf="@+id/tv_type_book" />

        <TextView
            android:id="@+id/tv_size_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字数"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/details_2"
            app:layout_constraintTop_toTopOf="@+id/tv_type_book" />

        <TextView
            android:id="@+id/details_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="更新："
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_bookName_book"
            app:layout_constraintTop_toBottomOf="@+id/tv_author_book" />

        <TextView
            android:id="@+id/tv_timeUpdate_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/details_6"
            app:layout_constraintStart_toEndOf="@+id/details_6" />

        <TextView
            android:id="@+id/details_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="最近："
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_bookName_book"
            app:layout_constraintTop_toBottomOf="@+id/details_6" />

        <TextView
            android:id="@+id/tv_readChapter_detelis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/details_7"
            app:layout_constraintStart_toEndOf="@+id/details_7" />

        <TextView
            android:id="@+id/details_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="阅读："
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_bookName_book"
            app:layout_constraintTop_toBottomOf="@+id/details_7" />
        <TextView
            android:id="@+id/tv_progress_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/details_8"
            app:layout_constraintStart_toEndOf="@+id/details_8" />

        <TextView
            android:id="@+id/details_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="缓存："
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_bookName_book"
            app:layout_constraintTop_toBottomOf="@+id/details_8" />
        <TextView
            android:id="@+id/tv_saveCount_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/details_9"
            app:layout_constraintStart_toEndOf="@+id/details_9" />


        <LinearLayout
            android:id="@+id/details_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_cover"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_cover">


            <Button
                android:id="@+id/bt_book_read"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/huise"
                android:enabled="false"
                android:padding="10dp"
                android:text="开始阅读"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <Button
                android:id="@+id/bt_book_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/huise"
                android:enabled="false"
                android:padding="10dp"
                android:text="加入书架"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_book_catalog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/huise"
                android:enabled="false"
                android:padding="10dp"
                android:text="章节目录"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_book_cache"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/huise"
                android:enabled="false"
                android:padding="10dp"
                android:text="缓存全书"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/details_4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/huise"
            app:layout_constraintTop_toBottomOf="@+id/details_3" />


        <TextView
            android:id="@+id/tv_desc_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="尼日同阿斯达斯"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/details_4" />

        <TextView
            android:id="@+id/details_5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/huise"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_book" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>